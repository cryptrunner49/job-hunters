<% content_for :title, "Editing resume" %>
<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl dark:text-gray-300">Editing resume</h1>
  <%= render "form", resume: @resume %>
  <%= link_to "Show this resume", @resume, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 dark:bg-gray-800 dark:hover:bg-gray-700 dark:text-gray-300 inline-block font-medium" %>
  <%= link_to "Back to resumes", resumes_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 dark:bg-gray-800 dark:hover:bg-gray-700 dark:text-gray-300 inline-block font-medium" %>
</div>