<h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4"><%= resume.title %></h2>
<div class="space-y-4">
  <div>
    <dt class="font-semibold text-gray-700 dark:text-gray-300">Resume Type</dt>
    <dd class="mt-1 text-gray-600 dark:text-gray-400 capitalize">
      <%= resume.resume_type %>
    </dd>
  </div>
  <div class="hidden">
    <dt class="font-semibold text-gray-700 dark:text-gray-300">LaTeX Source</dt>
    <dd id="resume-source" class="mt-1 text-gray-600 dark:text-gray-400 font-mono bg-gray-100 dark:bg-gray-900 p-3 rounded-md overflow-x-auto whitespace-pre-wrap">
      <%= resume.latex_source %>
    </dd>
  </div>
</div>