<% content_for :title, "Resumes" %>

<div class="w-full px-4 py-8 bg-gray-50 dark:bg-gray-900 min-h-screen">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 dark:bg-green-800 mb-5 text-green-500 dark:text-green-300 font-medium rounded-md" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex flex-col md:flex-row md:justify-between items-center mb-8">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white">Resumes</h1>
    <%= link_to "New Resume", new_resume_path, class: "mt-4 md:mt-0 px-5 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-md font-semibold transition-colors shadow hover:shadow-lg" %>
  </div>

  <!-- Grid layout with fixed-size cards -->
  <div id="resumes" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 justify-center">
    <% if @resumes.any? %>
      <% @resumes.each do |resume| %>
        <div id="<%= dom_id resume %>" class="w-80 bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 border border-gray-200 dark:border-gray-700 transition transform hover:scale-105">
          <%= render resume %>
          <!-- Action Buttons -->
          <div class="mt-6 flex flex-col gap-2">
            <%= link_to "Edit", edit_resume_path(resume), class: "w-full text-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500 dark:bg-blue-800 dark:hover:bg-blue-700 font-semibold transition-colors" %>
            <%= link_to "Show this resume", resume, class: "w-full text-center px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-md hover:bg-gray-200 dark:hover:bg-gray-600 font-semibold transition-colors" %>
            <%= button_to "Destroy this resume", resume, method: :delete, data: { confirm: "Are you sure?" }, class: "w-full text-center px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-500 font-semibold transition-colors" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center text-gray-600 dark:text-gray-400 my-10">No resumes found.</p>
    <% end %>
  </div>
</div>
