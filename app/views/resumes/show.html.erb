<% content_for :title, "Showing Resume" %>
<div class="max-w-3xl mx-auto px-4 py-8 bg-gray-50 dark:bg-gray-900 min-h-screen">
  <% if notice.present? %>
    <p id="notice" class="py-2 px-3 bg-green-50 dark:bg-green-800 mb-5 text-green-500 dark:text-green-300 font-medium rounded-md">
      <%= notice %>
    </p>
  <% end %>
  <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">Showing Resume</h1>
  <div id="resume" class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 border border-gray-200 dark:border-gray-700">
    <%= render @resume %>
    <div id="preview-resume-div">
      <iframe id="resume-preview" style="width: 100%; height: 500px;" frameborder="0"></iframe>
    </div>
  </div>
  <div class="mt-6 flex flex-wrap gap-4">
    <%= link_to "Edit this resume", edit_resume_path(@resume), class: "px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-md font-semibold transition-colors" %>
    <%= link_to "Back to resumes", resumes_path, class: "px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-md hover:bg-gray-200 dark:hover:bg-gray-600 font-semibold transition-colors" %>
    <%= button_to "Destroy this resume", @resume, method: :delete, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 hover:bg-red-500 text-white rounded-md font-semibold transition-colors" %>
  </div>
</div>
