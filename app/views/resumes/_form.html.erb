<div class="space-y-6">
  <%= form_with(model: resume, class: "space-y-6") do |form| %>
    <% if resume.errors.any? %>
      <div id="error_explanation" class="bg-red-50 dark:bg-red-900 text-red-500 dark:text-red-300 px-3 py-2 font-medium rounded-md mt-3">
        <h2><%= pluralize(resume.errors.count, "error") %> prohibited this resume from being saved:</h2>
        <ul class="list-disc ml-6">
          <% resume.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Left Column: Form Fields and Editor -->
      <div class="space-y-5">
        <div>
          <%= form.label :title, class: "block text-gray-700 dark:text-gray-300 font-medium" %>
          <%= form.text_field :title, class: ["block w-full shadow rounded-md border px-3 py-2 mt-1 outline-none", {"border-gray-400 dark:border-gray-600 focus:ring-2 focus:ring-blue-500 focus:border-blue-500": resume.errors[:title].none?, "border-red-400 dark:border-red-600 focus:ring-2 focus:ring-red-500 focus:border-red-500": resume.errors[:title].any?}] %>
        </div>
        <div>
          <%= form.label :resume_type, class: "block text-gray-700 dark:text-gray-300 font-medium" %>
          <%= form.select :resume_type, options_for_select(Resume.resume_types.keys.map { |key| [key.humanize, key] }), { include_blank: true }, class: "block w-full shadow rounded-md border border-gray-400 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-300 px-3 py-2 mt-1" %>
        </div>
        <div class="hidden">
          <%= form.label :latex_source, class: "block text-gray-700 dark:text-gray-300 font-medium" %>
          <%= form.textarea :latex_source, rows: 4, class: ["block w-full shadow rounded-md border px-3 py-2 mt-1 outline-none", {"border-gray-400 dark:border-gray-600 focus:ring-2 focus:ring-blue-500 focus:border-blue-500": resume.errors[:latex_source].none?, "border-red-400 dark:border-red-600 focus:ring-2 focus:ring-red-500 focus:border-red-500": resume.errors[:latex_source].any?}], data: { "latex-editor-target": "source" } %>
        </div>
        <div id="resume-editor" data-controller="latex-editor" data-latex-editor-target="editor" class="border border-gray-300 dark:border-gray-600 rounded-md" style="height: 365px; width: 100%;"></div>
      </div>
      <!-- Right Column: Preview -->
      <div>
        <div id="preview-resume-div" class="border border-gray-200 dark:border-gray-700 rounded-md">
          <iframe id="resume-preview" data-latex-editor-target="preview" style="width: 100%; height: 500px;" frameborder="0"></iframe>
        </div>
      </div>
    </div>
    <!-- Submit Button and Back Link -->
    <div class="mt-6 flex justify-between gap-4">
      <%= form.submit class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 text-white font-medium cursor-pointer" %>
      <%= link_to "Back to resumes", resumes_path, class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-50 dark:bg-gray-800 dark:hover:bg-gray-700 dark:text-gray-300 font-medium" %>
    </div>
  <% end %>
</div>