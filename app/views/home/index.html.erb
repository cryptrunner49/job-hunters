<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 bg-gray-50 dark:bg-gray-900">
  <% if authenticated? && !current_hunter.nil? %>
    <!-- Authenticated User Welcome Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-extrabold text-gray-900 dark:text-gray-100">Welcome Back, <%= current_hunter.name %>!</h1>
      <p class="text-gray-600 dark:text-gray-400 mt-4 text-lg">Your dashboard to track cold job applications</p>
    </div>
    <!-- Job Posts Section -->
    <div class="mb-12">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100">Available Job Posts</h2>
        <%= link_to "Create New Job Post", new_job_post_path, class: "rounded-md px-4 py-2 bg-purple-600 hover:bg-purple-500 dark:bg-purple-700 dark:hover:bg-purple-600 text-white font-medium shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-purple-500" %>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @job_posts.each do |job| %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-gray-200 dark:border-gray-700">
            <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100"><%= job.title %></h3>
            <p class="text-gray-600 dark:text-gray-400 mt-2"><%= job.company.name %></p>
            <p class="text-gray-500 dark:text-gray-300 mt-1"><%= job.location %> | <%= number_to_currency(job.salary) %></p>
            <div class="mt-4 flex gap-2">
              <%= link_to "View Details", job_post_path(job), class: "inline-block px-4 py-2 bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 text-white rounded-md font-medium shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              <%= link_to "Apply", new_job_application_path(job_post_id: job.id), class: "inline-block px-4 py-2 bg-green-600 hover:bg-green-500 dark:bg-green-700 dark:hover:bg-green-600 text-white rounded-md font-medium shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-green-500" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Job Applications Section -->
    <div class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-6">Your Job Applications</h2>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-gray-200 dark:border-gray-700">
        <% if @job_applications.any? %>
          <ul class="divide-y divide-gray-200 dark:divide-gray-700">
            <% @job_applications.each do |application| %>
              <li class="py-4 flex justify-between items-center">
                <div class="space-y-1">
                  <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100"><%= application.job_post.title %></h3>
                  <p class="text-gray-500 dark:text-gray-300"><%= application.status.capitalize %></p>
                  <% if @interviews[application.id].present? %>
                    <p class="text-gray-600 dark:text-gray-400">
                      Interviews: <%= @interviews[application.id].map { |i| "[#{i.scheduled_date}]" }.join(", ") %>
                    </p>
                  <% end %>
                  <% if @job_offers[application.id].present? %>
                    <p class="text-gray-600 dark:text-gray-400">
                      Offer: <%= @job_offers[application.id].map { |o| "[#{o.status}]" }.join(", ") %>
                    </p>
                  <% end %>
                </div>
                <%= link_to "View", job_application_path(application), class: "inline-block px-4 py-2 bg-green-600 hover:bg-green-500 dark:bg-green-700 dark:hover:bg-green-600 text-white rounded-md font-medium shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-green-500" %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-gray-500 dark:text-gray-300 text-center py-4">You havenâ€™t applied to any jobs yet.</p>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- Unauthenticated User Welcome Section -->
    <div class="text-center py-16">
      <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-gray-100">Welcome to Job Hunters</h1>
      <p class="text-gray-600 dark:text-gray-400 mt-4 text-lg md:text-xl">Your gateway to finding and applying for jobs, managing resumes, and tracking interviews.</p>
      <div class="mt-8 flex justify-center gap-4">
        <%= link_to "Sign In", new_session_path, class: "px-6 py-3 bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 text-white rounded-lg font-medium shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <%= link_to "Sign Up", new_hunter_path, class: "px-6 py-3 bg-green-600 hover:bg-green-500 dark:bg-green-700 dark:hover:bg-green-600 text-white rounded-lg font-medium shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>
    </div>
  <% end %>
</div>