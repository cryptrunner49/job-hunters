<% content_for :title, "Editing job application" %>

<div class="w-full bg-white dark:bg-gray-900 p-6 rounded-md shadow-md">
  <h1 class="font-bold text-4xl text-gray-900 dark:text-gray-100 mb-6">Editing job application</h1>

  <%= render "form", job_application: @job_application %>

  <div class="grid grid-cols-2 gap-4 mt-6">
    <%= link_to "Show this job application", @job_application, 
        class: "text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 dark:bg-gray-800 dark:hover:bg-gray-700 text-gray-900 dark:text-gray-100 font-medium transition-colors" %>
    <%= link_to "Back to job applications", job_applications_path, 
        class: "text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 dark:bg-gray-800 dark:hover:bg-gray-700 text-gray-900 dark:text-gray-100 font-medium transition-colors" %>
  </div>
</div>
