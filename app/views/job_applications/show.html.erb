<% content_for :title, "Showing job application" %>

<div class="md:w-2/3 w-full p-6 bg-white dark:bg-gray-900">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-green-100 dark:bg-green-800 text-green-700 dark:text-green-300 font-medium rounded-md mb-5" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="font-bold text-4xl text-gray-900 dark:text-white mb-4">Showing job application</h1>

  <div class="mb-6">
    <%= render @job_application %>
  </div>

  <div class="flex flex-wrap gap-3">
    <%= link_to "Edit this job application", edit_job_application_path(@job_application),
      class: "rounded-md px-4 py-2 text-gray-700 bg-gray-200 hover:bg-gray-300 dark:bg-gray-800 dark:text-gray-200 dark:hover:bg-gray-700 font-medium transition" %>

    <%= link_to "Back to home", root_path,
      class: "rounded-md px-4 py-2 text-gray-700 bg-gray-200 hover:bg-gray-300 dark:bg-gray-800 dark:text-gray-200 dark:hover:bg-gray-700 font-medium transition" %>

    <%= button_to "Destroy this job application", @job_application, method: :delete,
      class: "rounded-md px-4 py-2 text-white bg-red-600 hover:bg-red-500 dark:bg-red-700 dark:hover:bg-red-600 font-medium transition",
      data: { confirm: "Are you sure you want to delete this job application?" } %>
  </div>
</div>
