<% content_for :title, "Showing Job Application" %>
<div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-6 bg-gray-50 dark:bg-gray-900">
  <% if notice.present? %>
    <p class="py-0 px-4 bg-green-100 dark:bg-green-800 text-green-700 dark:text-green-300 font-medium rounded-md mb-6" id="notice">
      <%= notice %>
    </p>
  <% end %>
  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-6">Job Application Details</h1>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-3 border border-gray-200 dark:border-gray-700 mb-6">
    <%= render @job_application %>
  </div>
  <div class="flex flex-wrap gap-4">
    <%= link_to "Add Interview", new_job_application_interview_path(@job_application), class: "px-4 py-2 bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 text-white rounded-md font-semibold shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <%= link_to "Add Job Offer", new_job_application_job_offer_path(@job_application), class: "px-4 py-2 bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 text-white rounded-md font-semibold shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <%= link_to "Show Job Offers", job_application_job_offers_path(@job_application), class: "px-4 py-2 bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 text-white rounded-md font-semibold shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <%= link_to "Show Interviews", job_application_interviews_path(@job_application), class: "px-4 py-2 bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 text-white rounded-md font-semibold shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <%= link_to "Edit", edit_job_application_path(@job_application), class: "px-4 py-2 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 rounded-md font-semibold shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500" %>
    <%= button_to "Destroy", @job_application, method: :delete, class: "px-4 py-2 bg-red-600 hover:bg-red-500 dark:bg-red-700 dark:hover:bg-red-600 text-white rounded-md font-semibold shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-red-500", data: { confirm: "Are you sure you want to delete this job application?" } %>
  </div>
</div>