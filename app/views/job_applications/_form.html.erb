          "block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100",
          {"border-gray-400 dark:border-gray-600 focus:outline-blue-600": job_application.errors[:hunter_id].none?, 
           "border-red-400 dark:border-red-600 focus:outline-red-600": job_application.errors[:hunter_id].any?}
        ] %>
  </div>

