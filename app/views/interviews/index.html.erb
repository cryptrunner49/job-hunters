<% content_for :title, "Interviews for Job Application ##{@job_application.id}" %>
<div class="container mx-auto px-4 py-6">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-green-100 dark:bg-green-800 text-green-700 dark:text-green-300 font-medium rounded-md mb-5" id="notice">
      <%= notice %>
    </p>
  <% end %>
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl text-gray-900 dark:text-white">Interviews for Job Application #<%= @job_application.id %></h1>
    <%= link_to "New Interview", new_job_application_interview_path(@job_application), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium transition-colors" %>
  </div>
  <div class="bg-white dark:bg-gray-900 rounded-lg shadow overflow-x-auto">
    <table class="min-w-full">
      <thead class="bg-gray-50 dark:bg-gray-700">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Interview Type</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Mode</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Scheduled Date</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Result</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Notes</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider" colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
        <% @interviews.each do |interview| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100"><%= interview.interview_type %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100"><%= interview.mode %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100"><%= interview.scheduled_date %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100"><%= interview.result %></td>
            <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-100"><%= interview.notes %></td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
              <%= link_to "Show", job_application_interview_path(@job_application, interview), class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-600" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
              <%= link_to "Edit", edit_job_application_interview_path(@job_application, interview), class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-600" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
              <%= link_to "Destroy", job_application_interview_path(@job_application, interview), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-600" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>