<h1>Interviews</h1>

<%= link_to 'New Interview', new_job_application_interview_path(@job_application) %>

<table>
  <thead>
    <tr>
      <th>Interview Type</th>
      <th>Mode</th>
      <th>Scheduled Date</th>
      <th>Result</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interviews.each do |interview| %>
      <tr>
        <td><%= interview.interview_type %></td>
        <td><%= interview.mode %></td>
        <td><%= interview.scheduled_date %></td>
        <td><%= interview.result %></td>
        <td><%= interview.notes %></td>
        <td><%= link_to 'Show', job_application_interview_path(@job_application, interview) %></td>
        <td><%= link_to 'Edit', edit_job_application_interview_path(@job_application, interview) %></td>
        <td><%= link_to 'Destroy', job_application_interview_path(@job_application, interview), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>