<%= form_with(model: interview, class: "contents") do |form| %>
  <% if interview.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(interview.errors.count, "error") %> prohibited this interview from being saved:</h2>

      <ul class="list-disc ml-6">
        <% interview.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :job_application_id %>
    <%= form.text_field :job_application_id, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": interview.errors[:job_application_id].none?, "border-red-400 focus:outline-red-600": interview.errors[:job_application_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :scheduled_date %>
    <%= form.datetime_field :scheduled_date, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": interview.errors[:scheduled_date].none?, "border-red-400 focus:outline-red-600": interview.errors[:scheduled_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :result %>
    <%= form.text_field :result, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": interview.errors[:result].none?, "border-red-400 focus:outline-red-600": interview.errors[:result].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :mode %>
    <%= form.number_field :mode, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": interview.errors[:mode].none?, "border-red-400 focus:outline-red-600": interview.errors[:mode].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :interview_type %>
    <%= form.number_field :interview_type, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": interview.errors[:interview_type].none?, "border-red-400 focus:outline-red-600": interview.errors[:interview_type].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :notes %>
    <%= form.textarea :notes, rows: 4, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": interview.errors[:notes].none?, "border-red-400 focus:outline-red-600": interview.errors[:notes].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
