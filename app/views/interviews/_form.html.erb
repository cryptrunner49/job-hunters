<%= form_with(model: [@job_application, @interview], local: true, class: "space-y-6") do |form| %>
  <% if @interview.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900 text-red-500 dark:text-red-300 px-4 py-3 rounded-md">
      <h2 class="font-medium"><%= pluralize(@interview.errors.count, "error") %> prohibited this interview from being saved:</h2>
      <ul class="list-disc ml-5 mt-2">
        <% @interview.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :interview_type, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.select :interview_type, Interview.interview_types.keys, { prompt: "Select type" }, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-800 dark:text-gray-100" %>
  </div>
  <div>
    <%= form.label :mode, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.select :mode, Interview.modes.keys, { prompt: "Select mode" }, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-800 dark:text-gray-100" %>
  </div>
  <div>
    <%= form.label :scheduled_date, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.datetime_field :scheduled_date, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-800 dark:text-gray-100" %>
  </div>
  <div>
    <%= form.label :result, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_field :result, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-800 dark:text-gray-100" %>
  </div>
  <div>
    <%= form.label :notes, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_area :notes, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-800 dark:text-gray-100" %>
  </div>
  <div class="flex gap-4">
    <%= form.submit class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium transition-colors" %>
    <%= link_to "Back to Interviews", job_application_interviews_path(@job_application), class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-50 text-gray-700 dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-gray-300 font-medium transition-colors" %>
  </div>
<% end %>