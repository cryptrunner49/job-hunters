<% content_for :title, "Showing Job Post" %>

<div class="md:w-2/3 w-full p-6 bg-white dark:bg-gray-900 rounded-lg shadow-md">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-green-100 dark:bg-green-800 text-green-700 dark:text-green-300 font-medium rounded-md mb-5" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="font-bold text-4xl text-gray-900 dark:text-white mb-4">Showing Job Post</h1>

  <div class="mb-6">
    <%= render @job_post %>
  </div>

  <div class="flex flex-wrap gap-3">
    <%= link_to "Edit this job post", edit_job_post_path(@job_post),
      class: "rounded-md px-4 py-2 text-gray-700 bg-gray-200 hover:bg-gray-300 dark:bg-gray-800 dark:text-gray-200 dark:hover:bg-gray-700 font-medium transition" %>

    <%= link_to "Back to home page", root_path,
      class: "rounded-md px-4 py-2 text-gray-700 bg-gray-200 hover:bg-gray-300 dark:bg-gray-800 dark:text-gray-200 dark:hover:bg-gray-700 font-medium transition" %>

    <%= button_to "Destroy this job post", @job_post, method: :delete,
      class: "rounded-md px-4 py-2 text-white bg-red-600 hover:bg-red-500 dark:bg-red-700 dark:hover:bg-red-600 font-medium transition" %>
  </div>
</div>

