<% content_for :title, "Showing Job Post" %>
<div class="max-w-4xl mx-auto p-6 bg-white dark:bg-gray-800 shadow-md rounded-lg">
  <% if notice.present? %>
    <div class="mb-6 p-4 bg-green-50 dark:bg-green-900/50 border border-green-200 dark:border-green-800 text-green-700 dark:text-green-200 rounded-lg" id="notice">
      <%= notice %>
    </div>
  <% end %>
  <header class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Job Posting Details</h1>
  </header>
  <section class="mb-8">
    <%= render @job_post %>
  </section>
  <nav class="flex flex-wrap gap-3">
    <%= link_to "Edit this job post", edit_job_post_path(@job_post),
      class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 dark:bg-blue-700 dark:hover:bg-blue-800 text-white rounded-lg font-medium transition-colors duration-200" %>
    <%= link_to "Back to home page", root_path,
      class: "inline-flex items-center px-4 py-2 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-200 rounded-lg font-medium transition-colors duration-200" %>
    <%= button_to "Destroy this job post", @job_post, method: :delete,
      class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 dark:bg-red-700 dark:hover:bg-red-800 text-white rounded-lg font-medium transition-colors duration-200" %>
  </nav>
</div>