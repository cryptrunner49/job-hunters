<div id="<%= dom_id job_post %>" class="space-y-6">
  <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Title</dt>
      <dd class="text-gray-700 dark:text-gray-300"><%= job_post.title %></dd>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Location</dt>
      <dd class="text-gray-700 dark:text-gray-300"><%= job_post.location %></dd>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg md:col-span-2">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Description</dt>
      <dd class="text-gray-700 dark:text-gray-300 prose dark:prose-invert"><%= job_post.description %></dd>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Skills Required</dt>
      <dd class="text-gray-700 dark:text-gray-300"><%= job_post.skills_required %></dd>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Experience</dt>
      <dd class="text-gray-700 dark:text-gray-300"><%= job_post.experience %></dd>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Salary</dt>
      <dd class="text-gray-700 dark:text-gray-300"><%= number_to_currency(job_post.salary) if job_post.salary %></dd>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Employment Type</dt>
      <dd class="text-gray-700 dark:text-gray-300 capitalize"><%= job_post.employment_type %></dd>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Remote Status</dt>
      <dd class="text-gray-700 dark:text-gray-300 capitalize"><%= job_post.remote %></dd>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Relocation</dt>
      <dd class="text-gray-700 dark:text-gray-300"><%= job_post.relocation ? "Yes" : "No" %></dd>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">English Level</dt>
      <dd class="text-gray-700 dark:text-gray-300 capitalize"><%= job_post.english_level %></dd>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Japanese Level</dt>
      <dd class="text-gray-700 dark:text-gray-300 capitalize"><%= job_post.japanese_level %></dd>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Posted At</dt>
      <dd class="text-gray-700 dark:text-gray-300"><%= job_post.posted_at&.strftime("%B %d, %Y") %></dd>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Closing Date</dt>
      <dd class="text-gray-700 dark:text-gray-300"><%= job_post.closing_date&.strftime("%B %d, %Y") %></dd>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Company</dt>
      <dd class="text-gray-700 dark:text-gray-300"><%= job_post.company&.name || "N/A" %></dd>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-lg">
      <dt class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Role</dt>
      <dd class="text-gray-700 dark:text-gray-300"><%= job_post.role&.name || "N/A" %></dd>
    </div>
  </dl>
</div>