<%= form_with(model: job_post, class: "contents") do |form| %>
  <% if job_post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 dark:bg-red-900 text-red-500 dark:text-red-300 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(job_post.errors.count, "error") %> prohibited this job_post from being saved:</h2>
      <ul class="list-disc ml-6">
        <% job_post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Table Fields %>
<% [:company_id, :role_id].each do |field| %>
  <div class="my-5">
    <%= form.label field, class: "dark:text-gray-200" %>
    <div class="flex items-center gap-2">
      <%= form.collection_select field, 
          field == :company_id ? @companies : @roles, 
          :id, :name, 
          { prompt: "Select a #{field == :company_id ? 'company' : 'role'}" }, 
          { 
            class: "block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full 
                    bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 
                    border-gray-400 dark:border-gray-600 focus:outline-blue-600 
                    dark:focus:outline-blue-400 appearance-none",
            data: { 
              error: job_post.errors[field].any? ? "true" : "false"
            }
          } %>
      <button 
        type="button" 
        class="add-new-btn rounded-md px-3 py-2 bg-gray-100 hover:bg-gray-200 dark:bg-gray-800 dark:hover:bg-gray-700 text-gray-900 dark:text-gray-100"
        data-field-type="<%= field %>"
      >
        Add New
      </button>
    </div>
    <%= render partial: 'inline_forms', locals: { field: field } %>
  </div>
<% end %>

  <%# Form Fields %>
  <% [:title, :description, :skills_required, :experience, :location, :salary].each do |field| %>
    <div class="my-5">
      <%= form.label field, class: "dark:text-gray-200" %>
      <%= form.text_field field, class: [
          "block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100",
          {"border-gray-400 dark:border-gray-600 focus:outline-blue-600": job_post.errors[field].none?, 
           "border-red-400 dark:border-red-600 focus:outline-red-600": job_post.errors[field].any?}
        ] %>
    </div>
  <% end %>

  <%# Date Fields %>
  <% [ :posted_at, :closing_date ].each do |field| %>
    <div class="my-5">
      <%= form.label field, class: "dark:text-gray-200" %>
      <%= form.date_field field, class: [
          "block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100",
          {"border-gray-400 dark:border-gray-600 focus:outline-blue-600": job_post.errors[field].none?, 
           "border-red-400 dark:border-red-600 focus:outline-red-600": job_post.errors[field].any?}
        ] %>
    </div>
  <% end %>

  <%# Textarea Field %>
  <div class="my-5">
    <%= form.label :description, class: "dark:text-gray-200" %>
    <%= form.text_area :description, rows: 4, class: [
          "block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100",
          {"border-gray-400 dark:border-gray-600 focus:outline-blue-600": job_post.errors[:description].none?, 
           "border-red-400 dark:border-red-600 focus:outline-red-600": job_post.errors[:description].any?}
        ] %>
  </div>

  <%# Checkboxes %>
  <% [:relocation, :apply_from_anywhere].each do |field| %>
    <div class="my-5 flex items-center">
      <%= form.check_box field, class: "h-5 w-5 border-gray-400 dark:border-gray-500 bg-gray-50 dark:bg-gray-800 rounded-md focus:ring-blue-600 dark:focus:ring-blue-400 accent-blue-600 dark:accent-blue-500" %>
      <%= form.label field, class: "ml-2 dark:text-gray-200" %>
    </div>
  <% end %>

  <%# Select Fields %>
  <% [:remote, :english_level, :japanese_level, :employment_type].each do |field| %>
    <div class="my-5">
      <%= form.label field, class: "dark:text-gray-200" %>
      <%= form.select field, options_for_select(JobPost.send("#{field}s").keys.map { |key| [key.humanize, key] }), 
        { include_blank: false },
        { class: "block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full 
                  bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 
                  border-gray-400 dark:border-gray-600 focus:outline-blue-600 
                  dark:focus:outline-blue-400 appearance-none" } %>
    </div>
  <% end %>

  <%# Submit Button %>
  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 dark:bg-blue-800 dark:hover:bg-blue-700 text-white inline-block font-medium cursor-pointer shadow-md focus:outline-none focus:ring-2 focus:ring-blue-600 dark:focus:ring-blue-500" %>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelectorAll('.add-new-btn').forEach(button => {
        button.addEventListener('click', function() {
          const fieldType = this.dataset.fieldType;
          const formId = `new-${fieldType.replace('_id', '')}-form`;
          const form = document.getElementById(formId);
          form.classList.toggle('hidden');
        });
      });
    });
  </script>
<% end %>
