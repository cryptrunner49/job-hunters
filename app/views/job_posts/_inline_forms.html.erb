<% if field == :company_id %>
  <div id="new-company-form" class="hidden mt-4">
    <%= form_with(model: Company.new, url: companies_path, data: { remote: true }, class: "flex gap-2") do |f| %>
      <%= f.text_field :name, 
            placeholder: "New company name", 
            class: "block shadow rounded-md border outline-none px-3 py-2 w-full bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 border-gray-400 dark:border-gray-600" %>
      <%= f.submit "Create", class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 dark:bg-blue-800 dark:hover:bg-blue-700 text-white cursor-pointer" %>
    <% end %>
  </div>
<% else %>
  <div id="new-role-form" class="hidden mt-4">
    <%= form_with(model: Role.new, url: roles_path, data: { remote: true }, class: "flex gap-2") do |f| %>
      <%= f.text_field :name, 
            placeholder: "New role name", 
            class: "block shadow rounded-md border outline-none px-3 py-2 w-full bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 border-gray-400 dark:border-gray-600" %>
      <%= f.submit "Create", class: "rounded-md px-3.5 mt-5 py-2.5 bg-blue-600 hover:bg-blue-500 dark:bg-blue-800 dark:hover:bg-blue-700 text-white cursor-pointer" %>
    <% end %>
  </div>
<% end %>