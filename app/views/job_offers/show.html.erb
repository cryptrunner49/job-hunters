<% content_for :title, "Job Offer Details" %>
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6 bg-gray-50 dark:bg-gray-900">
  <!--
  <%# if notice.present? %>
    <p class="py-2 px-4 bg-green-100 dark:bg-green-800 text-green-700 dark:text-green-300 font-medium rounded-md mb-6" id="notice">
      <%#= notice %>
    </p>
  <%# end %>
  -->
  <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Job Offer Details</h1>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 border border-gray-200 dark:border-gray-700">
    <dl class="space-y-4">
      <div>
        <dt class="font-medium text-gray-700 dark:text-gray-300">Status</dt>
        <dd class="mt-1 text-gray-900 dark:text-gray-100"><%= @job_offer.status %></dd>
      </div>
      <div>
        <dt class="font-medium text-gray-700 dark:text-gray-300">Salary</dt>
        <dd class="mt-1 text-gray-900 dark:text-gray-100"><%= number_to_currency(@job_offer.salary, precision: 2) %></dd>
      </div>
      <div>
        <dt class="font-medium text-gray-700 dark:text-gray-300">Start Date</dt>
        <dd class="mt-1 text-gray-900 dark:text-gray-100"><%= @job_offer.start_date %></dd>
      </div>
      <div>
        <dt class="font-medium text-gray-700 dark:text-gray-300">Offer Date</dt>
        <dd class="mt-1 text-gray-900 dark:text-gray-100"><%= @job_offer.offer_date %></dd>
      </div>
      <div>
        <dt class="font-medium text-gray-700 dark:text-gray-300">Message</dt>
        <dd class="mt-1 text-gray-900 dark:text-gray-100 whitespace-pre-wrap"><%= @job_offer.message %></dd>
      </div>
    </dl>
    <div class="mt-6 flex gap-4">
      <%= link_to "Edit", edit_job_application_job_offer_path(@job_application, @job_offer), class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 text-white font-medium transition-colors" %>
      <%= link_to "Back to Job Offers", job_application_job_offers_path(@job_application), class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 font-medium transition-colors" %>
      <%= button_to "Destroy", job_application_job_offer_path(@job_application, @job_offer), method: :delete, data: { confirm: "Are you sure?" }, class: "rounded-md px-4 py-2 bg-red-600 hover:bg-red-500 dark:bg-red-700 dark:hover:bg-red-600 text-white font-medium transition-colors" %>
    </div>
  </div>
</div>