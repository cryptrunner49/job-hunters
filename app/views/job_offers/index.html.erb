<% content_for :title, "Job Offers for Job Application ##{@job_application.id}" %>
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6 bg-gray-50 dark:bg-gray-900">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-green-100 dark:bg-green-800 text-green-700 dark:text-green-300 font-medium rounded-md mb-6" id="notice">
      <%= notice %>
    </p>
  <% end %>
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Job Offers for Job Application #<%= @job_application.id %></h1>
    <%= link_to "New Job Offer", new_job_application_job_offer_path(@job_application), class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 text-white font-medium transition-colors" %>
  </div>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-x-auto">
    <% if @job_offers.any? %>
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Salary</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Start Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Offer Date</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @job_offers.each do |job_offer| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100"><%= job_offer.status %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">$ <%= job_offer.salary %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100"><%= job_offer.start_date %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100"><%= job_offer.offer_date %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "Show", job_application_job_offer_path(@job_application, job_offer), class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-600" %>
                <%= link_to "Edit", edit_job_application_job_offer_path(@job_application, job_offer), class: "ml-4 text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-600" %>
                <%= link_to "Destroy", job_application_job_offer_path(@job_application, job_offer), method: :delete, data: { confirm: "Are you sure?" }, class: "ml-4 text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-600" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center py-6 text-gray-900 dark:text-gray-100">No job offers found.</p>
    <% end %>
  </div>
</div>