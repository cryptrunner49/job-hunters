<%= form_with(model: job_offer, class: "contents") do |form| %>
  <% if job_offer.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(job_offer.errors.count, "error") %> prohibited this job_offer from being saved:</h2>

      <ul class="list-disc ml-6">
        <% job_offer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :hunter_id %>
    <%= form.text_field :hunter_id, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": job_offer.errors[:hunter_id].none?, "border-red-400 focus:outline-red-600": job_offer.errors[:hunter_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :job_post_id %>
    <%= form.text_field :job_post_id, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": job_offer.errors[:job_post_id].none?, "border-red-400 focus:outline-red-600": job_offer.errors[:job_post_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :company_id %>
    <%= form.text_field :company_id, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": job_offer.errors[:company_id].none?, "border-red-400 focus:outline-red-600": job_offer.errors[:company_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.text_field :status, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": job_offer.errors[:status].none?, "border-red-400 focus:outline-red-600": job_offer.errors[:status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :salary %>
    <%= form.text_field :salary, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": job_offer.errors[:salary].none?, "border-red-400 focus:outline-red-600": job_offer.errors[:salary].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": job_offer.errors[:start_date].none?, "border-red-400 focus:outline-red-600": job_offer.errors[:start_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :offer_date %>
    <%= form.date_field :offer_date, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": job_offer.errors[:offer_date].none?, "border-red-400 focus:outline-red-600": job_offer.errors[:offer_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :message %>
    <%= form.textarea :message, rows: 4, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": job_offer.errors[:message].none?, "border-red-400 focus:outline-red-600": job_offer.errors[:message].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
