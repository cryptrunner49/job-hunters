<% content_for :title, "Cover Letters" %>

<div class="w-full px-4 py-8 bg-gray-50 dark:bg-gray-900 min-h-screen">
  <% if notice.present? %>
    <p id="notice" class="py-2 px-3 bg-green-50 dark:bg-green-800 mb-5 text-green-500 dark:text-green-300 font-medium rounded-md">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex flex-col md:flex-row md:justify-between items-center mb-8">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white">Cover Letters</h1>
    <%= link_to "New Cover Letter", new_cover_letter_path, class: "mt-4 md:mt-0 px-5 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-md font-semibold transition-colors shadow hover:shadow-lg" %>
  </div>

  <!-- Grid layout with fixed-size cards -->
  <div id="cover_letters" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 justify-center">
    <% if @cover_letters.any? %>
      <% @cover_letters.each do |cover_letter| %>
        <div>
          <%= render cover_letter %>
          <div class="mt-4">
            <%= link_to "Show this Cover Letter", cover_letter, class: "w-full text-center px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-md hover:bg-gray-200 dark:hover:bg-gray-600 font-semibold transition-colors" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center text-gray-600 dark:text-gray-400 my-10">No cover letters found.</p>
    <% end %>
  </div>
</div>
