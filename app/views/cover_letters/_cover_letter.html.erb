<div id="<%= dom_id cover_letter %>" class="w-80 bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 m-4 border border-gray-200 dark:border-gray-700 transition transform hover:scale-105">
  <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 border-b pb-2">Cover Letter Details</h2>
  <div class="space-y-4">
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">Hunter</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400"><%= cover_letter.hunter_id %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">Subject</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400"><%= cover_letter.subject %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">LaTeX Source</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400 font-mono bg-gray-100 dark:bg-gray-900 p-3 rounded-md overflow-x-auto"><%= cover_letter.latex_source %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">PDF Path</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400">
        <%= link_to cover_letter.pdf_path, cover_letter.pdf_path, class: "text-blue-600 dark:text-blue-400 hover:underline" %>
      </dd>
    </div>
  </div>
</div>
