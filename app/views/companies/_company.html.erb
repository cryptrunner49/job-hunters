<div class="space-y-6">
  <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-4"><%= company.name %></h2>
  <dl class="space-y-4">
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">Industry</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400"><%= company.industry %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">Location</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400"><%= company.location %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">GitHub</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400"><%= link_to company.github, company.github, class: " hover:underline" if company.github.present? %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">Website</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400"><%= link_to company.website, company.website, class: " hover:underline" if company.website.present? %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">Job Search Website</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400"><%= link_to company.job_search_website, company.job_search_website, class: " hover:underline" if company.job_search_website.present? %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">Description</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400 whitespace-pre-wrap"><%= company.description %></dd>
    </div>
  </dl>
</div>