<div id="<%= dom_id company %>" class="w-80 bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 m-4 border border-gray-200 dark:border-gray-700 transition transform hover:scale-105">
  <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 border-b pb-2">Company Details</h2>
  <div class="space-y-4">
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">Name</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400"><%= company.name %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">Industry</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400"><%= company.industry %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">Location</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400"><%= company.location %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">Github</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400"><%= company.github %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">Website</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400"><%= company.website %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">Job Search Website</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400"><%= company.job_search_website %></dd>
    </div>
    <div>
      <dt class="font-semibold text-gray-700 dark:text-gray-300">Description</dt>
      <dd class="mt-1 text-gray-600 dark:text-gray-400"><%= company.description %></dd>
    </div>
  </div>
</div>
