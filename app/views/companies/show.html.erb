<% content_for :title, "Showing Company" %>
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 bg-gray-50 dark:bg-gray-900 min-h-screen">
  <!--
  <%# if notice.present? %>
    <p id="notice" class="py-2 px-4 bg-green-100 dark:bg-green-800 text-green-700 dark:text-green-300 font-medium rounded-md mb-6">
      <%#= notice %>
    </p>
  <%# end %>
  -->
  <div id="company" class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 border border-gray-200 dark:border-gray-700">
    <%= render @company %>
    <div class="mt-6 flex flex-wrap gap-4">
      <%= link_to "Edit", edit_company_path(@company), class: "px-4 py-2 bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 text-white rounded-md font-semibold shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= link_to "Back to Companies", companies_path, class: "px-4 py-2 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 rounded-md font-semibold shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500" %>
      <%= button_to "Destroy", @company, method: :delete, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 hover:bg-red-500 dark:bg-red-700 dark:hover:bg-red-600 text-white rounded-md font-semibold shadow-md transition-colors focus:outline-none focus:ring-2 focus:ring-red-500" %>
    </div>
  </div>
</div>